<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="4" author="RojiyevAsrorjon">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="firstname" type="VARCHAR(55)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="VARCHAR(55)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(15)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="users" baseColumnNames="role_id" constraintName="role_user_fk"
                                 referencedTableName="roles"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>